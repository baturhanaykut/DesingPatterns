@using DesingPattern.CQRS.CQRSPattern.Commands
@model CreateProductCommand
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <form method="post">
        <br />
        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" asp-for="Price" />
        <br />
        <label>Ürün Açıklması</label>
        <input type="text" class="form-control" asp-for="Description" />
        <br />
        <label>Ürün Stok Miktarı</label>
        <input type="text" class="form-control" asp-for="Stock" />
        <br />
        <button class="btn btn-dark">Ürünü Ekle</button>
    </form>

</div>

