@using DesingPattern.CQRS.CQRSPattern.Results
@model GetProductUpdateQueryResult
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <form method="post">
        <br />
        <label>Ürün Id</label>
        <input type="text" class="form-control" asp-for="ProductID" />
        <br />
        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" asp-for="Price" />
        <br />
        <label>Ürün Stok Miktarı</label>
        <input type="text" class="form-control" asp-for="Stock" />
        <br />
        <label>Ürün Stok Açıklması</label>
        <input type="text" class="form-control" asp-for="Description" />
        <br />
        <button class="btn btn-success">Ürünü Güncelle</button>
    </form>

</div>
